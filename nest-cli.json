{
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/articles/src",
  "monorepo": true,
  "root": "apps/articles",
  "compilerOptions": {
    "webpack": true,
    "tsConfigPath": "apps/articles/tsconfig.app.json",
    "assets": [
      "proto/*.proto",
      { "include": "../../../config/*.yaml", "outDir": "../../../dist/config" }
    ],
    "watchAssets": true
  },
  "projects": {
    "articles": {
      "type": "application",
      "root": "apps/articles",
      "entryFile": "main",
      "sourceRoot": "apps/articles/src",
      "compilerOptions": {
        "tsConfigPath": "apps/articles/tsconfig.app.json",
        "assets": ["proto/*.proto"],
        "watchAssets": true
      }
    },
    "users": {
      "type": "application",
      "root": "apps/users",
      "entryFile": "main",
      "sourceRoot": "apps/users/src",
      "compilerOptions": {
        "tsConfigPath": "apps/users/tsconfig.app.json",
        "assets": ["proto/*.proto"],
        "watchAssets": true
      }
    },
    "gateways": {
      "type": "application",
      "root": "apps/gateways",
      "entryFile": "main",
      "sourceRoot": "apps/gateways/src",
      "compilerOptions": {
        "tsConfigPath": "apps/gateways/tsconfig.app.json"
      }
    },
    "grpc-config": {
      "type": "library",
      "root": "libs/grpc-config",
      "entryFile": "index",
      "sourceRoot": "libs/grpc-config/src",
      "compilerOptions": {
        "tsConfigPath": "libs/grpc-config/tsconfig.lib.json",
        "assets": ["*.yaml"],
        "watchAssets": true
      }
    }
  }
}
